<!doctype html>
<html>
<head>
    <title>Drinks Site</title>
    <!-- <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <link rel="stylesheet" href="style.css">
</head>
<body>
<div class="container">

    <div class="page-header text-center p-5">
        <h1><span class=""></span>Select Page</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

        <section class="bg-dark text-light">
        <div class="col-sm-6">
          <h3>Products</h3>
          <ul class="messages">
          <% for(var i=0; i<drinks.length; i++) {%>
            <form action="addToCart" method="post">
           <div class="d-sm-flex flex-row mb-3  align-content-start">
            <li class="message">
              <img src="<%= drinks[i].src %>" alt="">
              <span><%= drinks[i].name %></span> 
              <span>$<%= drinks[i].price %></span>
            <input type="submit" class="addToCart" name="submit" value="Add To Cart"></input>
            <input type="hidden" name="name" value="<%= drinks[i].name %>">
            <input type="hidden" name="price" value="<%= drinks[i].price %>">
            <input type="hidden" name="img" value="<%= drinks[i].src %>">

            </li>
           </div>
          </form>
          <% } %>
        </section>

          </ul>
          <h3>Your Cart</h3>
          <ul class="messages">
          <% for(var i=0; i<cart.length; i++) {%>
            <li class="message">
              <img src="<%= cart[i].src %>" alt="">
              <span><%= cart[i].name %></span> 
              <span><%= cart[i].price %></span>
              <span><%= cart[i].time %></span>
              <button class="fa-trash">Delete from cart</button>
            </li>
          <% } %>
          </ul>
          <a class="fs-1 linkForCheck" href="/checkout">Checkout</a>

          
</div>

<script src="main.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
</body>
</html>
